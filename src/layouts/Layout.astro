---
import "../styles/global.css";
import Navbar from "../components/navbar.astro";
import Aside from "../components/aside.astro";
import Buscar from '../components/buscar.astro';
import "../styles/global.css";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>
	</head>
	<body class="bg-[#0c0c0e] overflow-hidden">
		<Navbar />
		<div class="flex p-5 flex-col">
			<Aside />
			<div class="flex md:hidden">
				<Buscar/>		
			</div>
			<main
				class=" bg-[#18181a] md:p-6 rounded-2xl overflow-auto h-[71vh] md:h-[85vh] md:w-[72%] md:absolute left-[32rem] top-[8.8rem] py-5 ">
				<slot />
			</main>
		</div>
		
	</body>
</html>

<style is:global>

	
	 html {
    font-family: 'Poppins' sans-serif;
    scrollbar-color: #3aee7044 #0c0c0e;
	
    }

	@media (width >= 768px) {
		html {
			font-size: clamp(6px, 0.8vw, 15.6px);
		}
	}

	@media (width <= 767px) {
		html {
			font-size: clamp(6px, 2.2vw, 16px);
			scrollbar-width: none;
			scroll-behavior: unset;
		}
		*{
	scrollbar-width: none;
}
	}
</style>
